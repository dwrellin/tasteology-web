{
  "name": "tasteology-web",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist/css dist/js",
    "copy:html": "cp src/index.html dist/",
    "copy:css": "cp src/css/*.css dist/css/",
    "copy:js": "cp src/js/*.js dist/js/",
    "copy:assets": "cp -r public/* dist/",
    "watch:html": "chokidar 'src/**/*.html' -c 'npm run copy:html'",
    "watch:css": "chokidar 'src/css/**/*.css' -c 'npm run copy:css'",
    "watch:js": "chokidar 'src/js/**/*.js' -c 'npm run copy:js'",
    "serve": "live-server dist --port=3000 --no-browser",
    "dev": "npm-run-all clean copy:html copy:css copy:js copy:assets --parallel watch:html watch:css watch:js serve",
    "build": "npm-run-all clean copy:html copy:css copy:js copy:assets"
  },
  "keywords": [],
  "author": "Dean Wyeth Rellin",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.25.10",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  }
}
